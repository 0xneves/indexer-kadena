  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@aws-sdk/client-s3": "^3.514.0",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.9",
    "@graphql-codegen/typescript-resolvers": "^4.2.1",
    "@graphql-tools/load": "^8.0.2",
    "@graphql-tools/schema": "^10.0.6",
    "@kadena/chainweb-stream-client": "^0.2.2",
    "@kadena/client": "^1.11.1",
    "@kadena/client-utils": "^0.11.0",
    "@kadena/types": "^0.6.2",
    "apollo-server-plugin-base": "^3.7.2",
    "axios": "^1.6.5",
    "commander": "^12.0.0",
    "cors": "^2.8.5",
    "dataloader": "^2.2.2",
    "express": "^4.18.2",
    "graphql": "^16.9.0",
    "graphql-scalars": "^1.23.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-tag": "^2.12.6",
    "graphql-ws": "^5.16.0",
    "json-bigint": "^1.0.0",
    "node-cache": "^5.1.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "postgraphile": "^4.13.0",
    "postgraphile-plugin-connection-filter": "^2.3.0",
    "prom-client": "^15.1.0",
    "sequelize": "^6.37.0",
    "subscriptions-transport-ws": "^0.11.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/chai": "^4.3.17",
    "@types/cors": "^2.8.17",
    "@types/eventsource": "^1.1.15",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "chai": "^5.1.1",
    "dotenv": "^16.4.4",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "mocha": "^10.7.3",
    "nodemon": "^3.1.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build": "tsc",
    "graphql:generate-types": "npx graphql-codegen",
    "dev:database": "ts-node src/index.ts --database",
    "dev:streaming": "ts-node src/index.ts --streaming",
    "dev:old-graphql": "ts-node src/index.ts --oldGraphql",
    "dev:graphql": "nodemon src/index.ts --graphql",
    "dev:guards": "nodemon src/index.ts --guards",
    "prod:start": "docker-compose up --build indexer && docker-compose logs -f indexer",
    "prod:streaming": "node dist/index.js --streaming",
    "prod:backfill": "node dist/index.js --backfill",
    "test": "NODE_ENV=test mocha -r ts-node/register 'tests/**/*.test.ts'",
    "create:database": "ts-node src/index.ts --database && yarn migrate:up",
    "migrate:up": "dotenv -e .env npx sequelize-cli db:migrate",
    "migrate:down": "dotenv -e .env npx sequelize-cli db:migrate:undo"
  }
}